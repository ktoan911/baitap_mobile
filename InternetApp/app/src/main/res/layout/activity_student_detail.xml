<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".StudentDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imgDetailThumbnail"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ tên"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvDetailHoten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyễn Văn A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MSSV"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvDetailMssv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20225000"
            android:textSize="18sp"
            android:textColor="#333333" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày sinh"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvDetailNgaysinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2004-01-01"
            android:textSize="18sp"
            android:textColor="#333333" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvDetailEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email@sis.hust.edu.vn"
            android:textSize="16sp"
            android:textColor="#2196F3"
            android:autoLink="email" />

    </LinearLayout>

</ScrollView>
